<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.ChickenSubProductFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/topLine"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/leftLine"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rightLine"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <TextView
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/friedCat"
            android:text="Fried"
            android:textSize="@dimen/_20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            app:layout_constraintTop_toBottomOf="@id/topLine"
            app:layout_constraintStart_toStartOf="@id/leftLine"
            app:layout_constraintBottom_toTopOf="@id/rv1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv1"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_250dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/friedCat"
            app:layout_constraintStart_toEndOf="@id/leftLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/barbequeCat"/>

        <TextView
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/barbequeCat"
            android:text="Barbeque"
            android:textSize="@dimen/_20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            app:layout_constraintTop_toBottomOf="@id/friedCat"
            app:layout_constraintStart_toStartOf="@id/leftLine"
            app:layout_constraintBottom_toTopOf="@id/rv2"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv2"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_250dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/barbequeCat"
            app:layout_constraintStart_toEndOf="@id/leftLine"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/combosCat"
            android:text="Combos"
            android:textSize="@dimen/_20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            app:layout_constraintTop_toBottomOf="@id/rv2"
            app:layout_constraintStart_toStartOf="@id/leftLine"
            app:layout_constraintBottom_toTopOf="@id/rv3"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv3"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_250dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/combosCat"
            app:layout_constraintStart_toEndOf="@id/leftLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

